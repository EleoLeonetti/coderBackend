<h1>Create Product</h1>


<section>
   <form action="/api/products" method="POST" enctype="multipart/form-data">

  <div class="mx-auto p-3 w-50">
    <label for="exampleInputTitle" class="form-label">Title</label>
    <input type="text" name="title" placeholder="Title" class="form-control">
  </div>

  <div class="mx-auto p-3 w-50">
    <label for="exampleInputCategory" class="form-label">Category</label>
    <input type="text" name="category" placeholder="Category" class="form-control">
  </div>


  <div class="mx-auto p-3 w-50">
    <label for="exampleInputDescription" class="form-label">Description</label>
    <input type="text" name="description" placeholder="Description" class="form-control">
  </div>

  <div class="mx-auto p-3 w-50">
    <label for="exampleInputPrice" class="form-label">Price</label>
    <input type="number" name="price" placeholder="Price" class="form-control">
  </div>

  <div class="mx-auto p-3 w-50">
    <label for="exampleInputStock" class="form-label">Stock</label>
    <input type="number" name="stock" placeholder="Stock" class="form-control">
  </div>

  <div class="mx-auto p-3 w-50">
    <label for="exampleInputCode" class="form-label">Code</label>
    <input type="text" name="code" placeholder="Code" class="form-control">
  </div>

  <div class="mx-auto p-3 w-50">
            <label for="accountStatus" class="form-label">Image</label>
            <input type="file" name="images" id="image" accept=".png" class="form-control">   
        </div>

  <div class="mx-auto p-3 w-50"><button type="submit" class="btn btn-primary ">Post</button></div>
  
</form>
</section>